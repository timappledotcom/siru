{
  "app-id": "com.github.timappledotcom.siru",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "23.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "siru",
  "finish-args": [
    "--socket=wayland",
    "--socket=fallback-x11",
    "--share=network",
    "--filesystem=home"
  ],
  "modules": [
    {
      "name": "ruby",
      "buildsystem": "autotools",
      "sources": [
        {
          "type": "archive",
          "url": "https://cache.ruby-lang.org/pub/ruby/3.3/ruby-3.3.0.tar.gz",
          "sha256": "96518814d9832bece92a85415a819d4893b307db5921ae1f0f751a9a89a56b7d"
        }
      ],
      "config-opts": [
        "--disable-install-doc",
        "--disable-install-rdoc",
        "--disable-install-capi"
      ]
    },
    {
      "name": "siru",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p /app/share/siru",
        "cp -r lib themes Gemfile Gemfile.lock siru.gemspec /app/share/siru/",
        "mkdir -p /app/share/siru/bin",
        "cp bin/siru /app/share/siru/bin/",
        "chmod +x /app/share/siru/bin/siru",
        "mkdir -p /app/bin",
        "echo '#!/bin/bash' > /app/bin/siru",
        "echo 'cd /app/share/siru' >> /app/bin/siru",
        "echo 'exec ruby -I lib bin/siru \"$@\"' >> /app/bin/siru",
        "chmod +x /app/bin/siru",
        "cd /app/share/siru && bundle install --deployment --without development"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/timappledotcom/siru.git",
          "tag": "v0.1.0",
          "commit": "4aef58f9716aae304eefba889bfb9561d0208751"
        }
      ]
    }
  ]
}
