<article class="single-post">
  <header class="single-header">
    <h1 class="single-title">{{ post.title }}</h1>
    <div class="single-meta">
      <time class="single-date">{{ post.date | date: "%B %d, %Y" }}</time>
    </div>
  </header>
  
  <section class="single-content">{{ post.rendered_content }}</section>
  
  {% if post.tags and post.tags.size > 0 %}
  <footer class="single-footer">
    {% for tag in post.tags %}
    <a class="single-tag" href="/tags/{{ tag | downcase | replace: ' ', '-' }}">{{ tag }}</a>
    {% endfor %}
  </footer>
  {% endif %}
</article>
