{% layout "default/baseof" %} {% block "contents" %}
<main>
  <article>
    <header>
      <h1>{{ post.title }}</h1>
      <time>{{ post.date | date: "%B %d, %Y" }}</time>
    </header>
    <section>{{ post.rendered_content }}</section>
    <footer>Tags: {% for tag in post.tags %} <a href="/tags/{{ tag }}">{{ tag }}</a> {% unless forloop.last %}, {% endunless %}{% endfor %}
    </footer>
  </article>
</main>
{% endblock %}
